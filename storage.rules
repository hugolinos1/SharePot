
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Règles pour le chemin des justificatifs
    match /receipts/{projectId}/{expenseId}/{fileName} {
      // TEST 1: Permettre l'écriture si l'utilisateur est authentifié
      // et que l'UID correspond à celui de COP2 (9iy2uBlAxabnzrbM5CIfidOsbLt1)
      // ET que le projectId dans le chemin est Z4Yayp96ZtWk5IlwyLdC
      allow create: if request.auth != null && 
                       request.auth.uid == '9iy2uBlAxabnzrbM5CIfidOsbLt1' && 
                       projectId == 'Z4Yayp96ZtWk5IlwyLdC' && 
                       request.resource.size < 5 * 1024 * 1024 && 
                       request.resource.contentType.matches('image/.*');

      // Pour les tests, simplifions aussi la lecture et la suppression
      allow read: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == '9iy2uBlAxabnzrbM5CIfidOsbLt1';
    }

    // Si vous avez d'autres chemins de stockage (ex: photos de profil)
    // ajoutez leurs règles ici. Par exemple :
    // match /profilePictures/{userId}/{fileName} {
    //   allow read: if request.auth != null;
    //   allow write: if request.auth != null && request.auth.uid == userId;
    // }

    // Règle par défaut plus restrictive pour tous les autres chemins
    // pour éviter un accès non intentionnel.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
